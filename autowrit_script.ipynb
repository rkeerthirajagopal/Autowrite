import pandas as pd
from jinja2 import Template
import os
import re

# === CONFIGURATION ===
excel_file = "concepts.xlsx"           # Your Excel input
template_folder = "templates"          # Folder containing SQL templates
output_folder = "output_queries"       # Folder to save individual queries
combined_output = "All_Queries.sql"    # Combined file

# Ensure output folder exists
os.makedirs(output_folder, exist_ok=True)

# === STEP 1: Load Excel ===
df = pd.read_excel(excel_file)

# === STEP 2: Pick template path ===
def get_template_path(target_type):
    target_type = str(target_type).lower().strip() if not pd.isna(target_type) else ""
    if target_type == "single":
        return os.path.join(template_folder, "single_query.sql")
    elif target_type == "target_reference":
        return os.path.join(template_folder, "target_reference_query.sql")
    else:
        return os.path.join(template_folder, "default_query.sql")

# === Helper: get value from row with fallback column names and NaN handling ===
def get_row_value(row, possible_names, default=None):
    for name in possible_names:
        if name in row.index:
            val = row.get(name)
            if not pd.isna(val) and str(val).strip() != "":
                return val
    return default

# === Helper: sanitize filename ===
def safe_filename(name):
    name = str(name)
    # replace spaces and slashes, remove other unsafe chars
    name = re.sub(r"[\/\\]+", "_", name)
    name = re.sub(r"[^A-Za-z0-9_\-\.]", "_", name)
    # trim length
    return name[:150] or "Concept"

# === STEP 3: Generate SQLs ===
all_queries = []

for index, row in df.iterrows():
    # get concept name (handle different casings and NaN)
    concept_name_raw = get_row_value(row, ["ConceptName", "conceptName", "concept_name"], None)
    if concept_name_raw is None:
        concept_name = f"Concept_{index+1}"
    else:
        concept_name = str(concept_name_raw).strip()
        if concept_name == "" or concept_name.lower() == "nan":
            concept_name = f"Concept_{index+1}"

    target_type = get_row_value(row, ["TargetType", "targettype", "target_type"], "")
    template_path = get_template_path(target_type)

    if not os.path.exists(template_path):
        print(f"‚ö†Ô∏è Template not found for '{target_type}', using default.")
        template_path = os.path.join(template_folder, "default_query.sql")
        if not os.path.exists(template_path):
            print("‚ùå Default template missing. Skipping.")
            continue

    # Load SQL template
    with open(template_path, "r", encoding="utf-8") as f:
        sql_template = Template(f.read())

    # Clean and process input fields (lists with quoted values)
    def clean_list_field(row, names):
        raw = get_row_value(row, names, "")
        if pd.isna(raw) or str(raw).strip() == "":
            return []
        return [f"'{x.strip()}'" for x in str(raw).split(",") if x.strip()]

    target_cpt_codes = clean_list_field(row, ["TargetCPTCodes", "targetcptcodes", "target_cpt_codes"])
    reference_cpt_codes = clean_list_field(row, ["ReferenceCPTCodes", "referencecptcodes", "reference_cpt_codes"])
    dx_codes = [f"'{x.replace('.', '').strip()}'" for x in str(get_row_value(row, ["DXCodes", "dxcodes", "dx_codes"], "")).split(",") if str(x).strip()]

    # Render the Jinja template
    query = sql_template.render(
        concept_name=concept_name,
        description=get_row_value(row, ["Description", "description"], ""),
        TargetClaimType=get_row_value(row, ["ClaimType", "claimtype", "Claim_Type"], ""),
        TargetCPTCodes=target_cpt_codes,
        ReferenceCPTCodes=reference_cpt_codes,
        DXCodes=dx_codes,
        ProviderRelation=get_row_value(row, ["ProviderRelation", "providerrelation"], ""),
        MemberRelation=get_row_value(row, ["MemberRelation", "memberrelation"], "")
    )

    # Save individual SQL file using sanitized name
    safe_name = safe_filename(concept_name)
    output_path = os.path.join(output_folder, f"{safe_name}.sql")
    with open(output_path, "w", encoding="utf-8") as f:
        f.write(query)

    print(f"‚úÖ Generated: {safe_name}.sql")

    # Add to combined query list
    all_queries.append(f"-- ===== {concept_name} =====\n{query}\n\n")

# === STEP 4: Save Combined Output ===
combined_path = os.path.join(output_folder, combined_output)
with open(combined_path, "w", encoding="utf-8") as f:
    f.writelines(all_queries)

print(f"\nüéâ All queries generated successfully! Combined file: {combined_path}")
